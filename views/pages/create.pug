extends ../layout
block content
  div(class="mx-auto col-10 p-4")
    h4(style="padding-left:6rem;") Add Snippet
    include ../includes/show_message
    form(action="/create", method="post" style="padding-left:6rem; width:90%;") 
      input.input(type='text' name='title' class="w-100 mx-auto p-2 rounded" placeholder="title")
      |
      select.select-option(name='language')
        option(value='javascript') Javascript
        option(value='html') Html
        option(value='css') Css
        option(value='ts') TypeScript
        option(value='react') ReactJS
        option(value='node') Node
        option(value='mongo') Mongodb
      |
      textarea.input-desc(type='text' class='w-100 mx-auto p-2' name='description'  placeholder=`Description`)
      textarea.input-snippet(type='text' class='w-100 mx-auto p-2' name='snippet'  placeholder=`Your code snippet ...`)      
      |
      |
      button.btn-submit(type= "submit" class='w-100 mx-auto p-2' onclick="clearMessage()" ) Submit code
      | 




  