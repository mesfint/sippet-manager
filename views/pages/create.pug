extends ../layout
block content 
    div(class="bg-success p-4 mb-2")
      form(action="/create", method="post" class="mx-auto " style="padding-left:60px;") 
        input.input-title(type='text' name='title'  placeholder="title")
        | 
        select.select-option(name='language')
          option(value='javascript') Javascript
          option(value='html') Html
          option(value='css') Css
          option(value='ts') TypeScript
          option(value='react') ReactJS
          option(value='node') Node
          option(value='mongo') Mongodb
        |
        
        input.input-title(type='text' name='title'  placeholder="Description")
        |
        textarea.input-desc(type='text' class='p-2' name='description'  placeholder=`Code`)
        |
        |
        button.btn-submit(type= "submit") Submit code
        | 