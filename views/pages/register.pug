extends ../layout
block content
  div(class="mx-auto col-6 pt-3 ")
    h4 Sign up
    include ../includes/show_message
    form(action="/register", method="post")
      input.input(type='text' name='firstname' style="width:42%;" class=" m-2  p-2 rounded" placeholder="First name  ")
      input.input(type='text' name='lastname' style="width:42%;" class=" p-2 m-2 rounded" placeholder="Last name  ")
      input.input(type='text' name='email' class="col-10 m-2 p-2 rounded" placeholder="email * ")
      input.input(type='password' name='password' class="col-10 m-2 p-2 rounded"  placeholder="passord *")
      input.input(type='password' name='confirm_password' class="col-10 m-2 p-2 rounded"  placeholder="confirm password * ")
      small.input-password-small(class="p-4") Password must be at least 8 characters long * 
      
      button(class="btn col-10 m-2 mt-4 " type="submit" style="background-color:#4D519D;color:white") Sign up
      h6(class="p-3") ––––––––––––––––––– Or continue with  ––––––––––––––––

      div(class="text-center col-10")
        <i class="fab fa-google m-2 mb-3" style="font-size:24px; "></i>
        <i class="fab fa-github m-2 mb-3" style="font-size:24px;"></i>
      