doctype html 
html
  head
    title sinnipet-manager
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    link(rel="stylesheet", href="/css/style.css")
  body
    h1.header Edit Snippet 
    
    div.container.col-10
      form(action="", method="post" class=" mx-auto" style="padding-left:60px;") 
        input.input-title(type='text' name='title'  value=`${snip.title}` placeholder="title")
        | 
        select.select-option(name='language')
          option(value='javascript') Javascript
          option(value=`${snip.language}` selected) #{snip.language}
          option(value='html') Html
          option(value='css') Css
          option(value='ts') TypeScript
          option(value='react') ReactJS
          option(value='node') Node
          option(value='mongo') Mongodb
        |
        textarea.input-desc(type='text' name='description' value=`${snip.description}` placeholder=`${snip.description}`) #{snip.description}
        |
        |
        button.btn-submit(type= "submit") Submit code
        | 
       
    